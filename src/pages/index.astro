---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Characters from '../data/Characters.json'
---

<Layout title="P5X Database">
	<main>
		<h1>Characters</h1>
		<ul role="list" class="link-card-grid">
				{Object.values(Characters).sort((a,b)=> a["Released"] < b["Released"]).map((char)=>{
					return <Card title={char["Codename"][0].toUpperCase()+char["Codename"].substring(1)} href = {"/P5XWiki/character/" + char["Codename"].toLowerCase()}/>
				})}
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: 0 auto;
		padding: 1rem;
		width: 100%;
		max-width: calc(100% - 12rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.link-card-grid {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 2rem;
		padding: 0;
	}
</style>
